        app:layout_constraintBottom_toTopOf="@+id/tv_command_destroy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_execute_stop" />

